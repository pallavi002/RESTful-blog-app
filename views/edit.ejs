<%- include('./partials/header') %>

<div class="ui container"style="margin-top: 10%;">
  <div class="ui main text container segment">
    <h1 class="ui huge header" >Edit <%= blog.title %></h1>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
      <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" value="<%= blog.title %>">
      </div>
      <div class="field">
        <label>Blog Content</label>
        <textarea name="blog[body]"><%= blog.body %></textarea>
      </div>
      <div class="field">
        <label>Image</label>
        <input type="text" name="blog[image]" value="<%= blog.image %>">
      </div>

      <button class="ui violet button" type="submit">Submit</button>
    </form>
  </div>
</div>

<%- include('./partials/footer') %>